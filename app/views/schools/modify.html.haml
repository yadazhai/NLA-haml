= render('header')

%table.table.table-striped.table-bordered
	%thead
		%tr
			%th.col-md-3
				Name
			%th.col-md-3
				Address
			%th.col-md-3
				Cohort
			%th.col-md-3

	%tbody
		- @schools.each do |school|
			%tr
				%td
					= school.name
				%td
					= school.address
				%td 
					= school.cohort
				%td
					= link_to "Edit", edit_school_path(school), class:'btn btn-primary col-md-6'				