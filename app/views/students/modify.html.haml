= render('header')

%table.table.table-striped.table-bordered
	%thead
		%tr
			%th.col-md-3
				First Name
			%th.col-md-3
				Last Name
			%th.col-md-3
				School
			%th.col-md-3
	%tbody
		- @students.each do |student|
			%tr
				%td
					= student.firstName
				%td
					= student.lastName
				%td 
					= student.currentSchool
				%td
					= link_to "Edit", edit_student_path(student), class:'btn btn-primary col-md-4'
					= link_to "Delete", person_path(student), :method => :delete, class:'btn btn-danger col-md-4'